<?xml version="1.0" encoding="utf-8"?>

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="6"
        android:layout_below="@+id/text_layout"
    >


        >


        <ImageButton
            android:id="@+id/settingsButton"
            android:src="@drawable/ic_settings_black_24dp"
            android:tint="#fff"
            android:background="@drawable/functional_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_margin="2dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="20sp"

            android:text="@string/optText" />

        <Button
            android:id="@+id/ACButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:background="@drawable/functional_buttons"
            android:layout_row="0"
            android:text="@string/ACText"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            style="@style/buttons"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttons"
            android:background="@drawable/functional_buttons"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:text="X"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/divideButton"
            android:layout_width="wrap_content"
            style="@style/buttons"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:background="@drawable/functional_buttons"
            android:layout_row="0"
            android:text="÷"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:textSize="20sp"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:text="8"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:text="9"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/squareButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:background="@drawable/functional_buttons"
            android:layout_row="1"
            android:text="√"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>



        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:textSize="20sp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:text="5"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:text="6"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/subtractButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:background="@drawable/functional_buttons"
            android:text="-"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_column="0"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_row="3"
            android:textSize="20sp"
            android:text="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textSize="20sp"
            android:layout_gravity="fill"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_row="3"
            android:text="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>


        <Button
            style="@style/buttons"
            android:id="@+id/additionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:text="+"
            android:background="@drawable/functional_buttons"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnWeight="1"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_rowWeight="1"
            android:textSize="20sp"
            android:text="0" />

        <Button
            android:id="@+id/dotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:text="."
            android:textSize="20sp"
            android:layout_columnWeight="1"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/signButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="4"
            style="@style/buttons"
            android:background="@drawable/hover_effects"
            android:text="+/-"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/powerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:text="x^y"
            android:textSize="20sp"
            style="@style/buttons"
            android:background="@drawable/functional_buttons"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/swapButton"
            android:textColor="#fff"
            android:background="@drawable/swap_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="20sp"
            android:text="SWAP" />

        <Button
            android:id="@+id/dropButton"
            android:textColor="#fff"
            android:background="@drawable/drop_button"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="5"
            android:text="DROP"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/enterButton"
            android:layout_margin="2dp"
            android:background="@drawable/enter_button"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="5"
            android:textSize="20sp"
            android:text="ENTER"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
    android:id="@+id/backButton"
    <ImageButton
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_margin="2dp"
        android:tint="#fff"
        android:id="@+id/backButton"
        android:background="@drawable/functional_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>






    </GridLayout>

