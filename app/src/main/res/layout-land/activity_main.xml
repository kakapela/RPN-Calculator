<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:id="@+id/main_layout"
android:orientation="horizontal"
    android:layout_gravity="right"
    android:gravity="right"
    android:weightSum="3"
    >


<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:columnCount="2"
    android:rowCount="5"
    android:id="@+id/StackLayout"
    android:layout_width="match_parent"
    android:layout_weight="3"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/deg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:text="DEG"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/stackInput"
        android:layout_column="1"
        android:layout_row="0"
        android:text="STACK: 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:textAlignment="center"
        android:layout_columnWeight="6"
        android:layout_rowWeight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:text="4"
        android:textAlignment="center"
        android:textSize="35sp"
        android:id="@+id/stack4"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:text="1"
        android:textAlignment="center"
        android:textSize="35sp"
        android:id="@+id/stack1"


        />
    <TextView
        android:id="@+id/thirdStackInput"
        android:layout_column="1"
        android:layout_row="1"
        android:hint="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="right"
        android:gravity="right"


        />
    <TextView
        android:id="@+id/secondStackInput"
        android:layout_column="1"
        android:layout_row="2"
        android:hint="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="right"
        android:gravity="right"


        />
    <TextView
        android:layout_column="0"
        android:layout_row="2"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_columnWeight="1"
        android:id="@+id/stack3"
        />
    <TextView
        android:layout_column="1"
        android:layout_row="3"
        android:hint="@string/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="right"
        android:gravity="right"
        android:id="@+id/firstStackInput"


        />
    <TextView
        android:layout_column="1"
        android:layout_row="4"
        android:hint="@string/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="right"
        android:gravity="right"
        android:id="@+id/mainInput"


        />
    <TextView
        android:layout_column="0"
        android:layout_row="3"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_columnWeight="1"
        android:id="@+id/stack2"

        />


</GridLayout>

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_layout"
        android:columnCount="4"
        android:rowCount="6"



        >


        >


        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/functional_buttons"
            android:onClick="goToSettings"
            android:src="@drawable/ic_settings_black_24dp"
            android:text="@string/optText"
            android:textSize="20sp"

            android:tint="#fff" />

        <Button
            android:id="@+id/ACButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/functional_buttons"
            android:text="@string/ACText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/multiplyButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/functional_buttons"
            android:text="X"
            android:textSize="20sp" />

        <Button
            android:id="@+id/divideButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/functional_buttons"
            android:text="÷"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button7"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"

            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button8"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button9"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/squareButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/functional_buttons"
            android:text="√"
            android:textSize="20sp" />


        <Button
            android:id="@+id/button4"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="4"

            android:textSize="20sp" />

        <Button
            android:id="@+id/button5"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button6"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/subtractButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/functional_buttons"
            android:text="-"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button1"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="1"

            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="3"
            android:textSize="20sp" />


        <Button
            android:id="@+id/additionButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@drawable/functional_buttons"
            android:text="+"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button0"
            style="@style/buttons"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dotButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="."
            android:textSize="20sp" />

        <Button
            android:id="@+id/signButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="@drawable/hover_effects"
            android:text="+/-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/powerButton"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="@drawable/functional_buttons"
            android:text="x^y"
            android:textSize="20sp" />

        <Button
            android:id="@+id/swapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:background="@drawable/swap_button"
            android:text="SWAP"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dropButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:background="@drawable/drop_button"
            android:text="DROP"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/enterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:background="@drawable/enter_button"
            android:text="ENTER"
            android:textColor="#fff"
            android:textSize="20sp" />
        android:id="@+id/backButton"

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:background="@drawable/functional_buttons"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="#fff" />


    </GridLayout>



</LinearLayout>